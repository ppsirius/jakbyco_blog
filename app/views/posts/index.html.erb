<h1>Posts</h1>
  <% @posts.each do |post| %>
    <div>
      <h2><%= post.title %></h2>
      <div class='date'><%= post.created_at.strftime("%d.%m.%Y") %></div>
      <div class='description'><%= post.description %></div>
      <div class='code'><%= post.code %></div>
    </div>
  <% end %>

<br>

<%= link_to 'New Post', new_post_path %>
